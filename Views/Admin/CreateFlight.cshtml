@model fbs.Models.Flight

<h2>Add New Flight</h2>

<form asp-action="CreateFlight" method="post">
    <div class="form-group">
        <label>Flight Number</label>
        <input type="text" asp-for="FlightId" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Departure City</label>
        <input type="text" asp-for="DepartureCity" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Arrival City</label>
        <input type="text" asp-for="ArrivalCity" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Departure Date</label>
        <input type="datetime-local" asp-for="DepartureDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" asp-for="Price" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Available Seats</label>
        <input type="number" asp-for="AvailableSeats" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Flight</button>
</form>
