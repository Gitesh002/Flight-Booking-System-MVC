@model FlightSearchViewModel


<div class="blur-black-background" style="margin-bottom:30px">
    <h5 style="text-align:center">Search Flights</h5>
    <div class="d-flex justify-content-center align-items-center" >
        <form asp-action="SearchResults" method="post" style="width: 100%;">
            <div class="row">
                <!-- From field -->
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="fromDropdown"><h5>From</h5></label>
                        <select id="fromDropdown" name="from" class="form-control" required>
                            <option value="">Select Departure</option>
                            @foreach (var airport in Model.ports)
                            {
                                <option value="@airport.IATA_code">@airport.city_name (@airport.IATA_code)</option>
                            }
                            @* Optional helper text *@
                        </select>
                    </div>
                </div>

                <!-- To field -->
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="toDropdown"><h5>To</h5></label>
                        <select id="toDropdown" name="to" class="form-control" required>
                            <option value="">Select Destination</option>
                            @foreach (var airport in Model.ports)
                            {
                                <option value="@airport.IATA_code">@airport.city_name (@airport.IATA_code)</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Date field -->
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="dateField"><h5>Date</h5></label>
                        <input type="date" name="date" id="dateField" class="form-control" required min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">Search</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Flights != null && Model.Flights.Any())
{   
    <h5 style="text-align:center">Available Flights</h5>
    <div class="blur-background">  
        <table class="table">
            <thead>
                <tr>
                    <th>Flight Number</th>
                    <th>Departure</th>
                    <th>Arrival</th>
                    <th>Departure Date</th>
                    <th>Departure Time</th>
                    <th>Price</th>
                    <th>Available Seats</th>
                    <th>Reserve</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flight in Model.Flights)
                {
                    <tr>
                        <td>@flight.FlightId</td>
                        <td>@Model.Airports[@flight.DepartureCity]</td>
                        <td>@Model.Airports[@flight.ArrivalCity]</td>
                        <td>@flight.DepartureDate.ToString("dd-MM-yyyy")</td>
                        <td>@flight.DepartureDate.TimeOfDay</td>
                        <td>@flight.Price.ToString("C")</td>
                        <td>@flight.AvailableSeats</td>
                        <td>
                            <a asp-action="Reserve" asp-route-flightId="@flight.FlightId" class="btn btn-primary">Reserve</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No flights found. Please search for available flights.</p>
}

