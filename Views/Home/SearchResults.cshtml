@model FlightSearchViewModel

<h2>Search Flights</h2>
<div class="transparent-black-background" style="height:150px;">
<div class="d-flex justify-content-center align-items-center" style="height:150px;">
    <form asp-action="SearchResults" method="post" style="width: 100%;">
        <div class="row">
            <!-- From field -->
            <div class="col-md-4">
                <div class="form-group">
                    <label><h5>From</h5></label>
                    <input type="text" name="from" class="form-control" required style="margin-bottom: 10px;" />
                </div>
            </div>

            <!-- To field -->
            <div class="col-md-4">
                <div class="form-group">
                    <label><h5>To</h5></label>
                    <input type="text" name="to" class="form-control" required style="margin-bottom: 10px;" />
                </div>
            </div>

            <!-- Date field -->
            <div class="col-md-4">
                <div class="form-group">
                    <label><h5>Date</h5></label>
                    <input type="date" name="date" class="form-control" required style="margin-bottom: 10px;" />
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="margin-bottom:35px">Search</button>
        </div>
    </form>
</div>
</div>

@if (Model.Flights != null && Model.Flights.Any())
{   
    <div class="transparent-black-background">
    <div class="transparent-background">
        <h2>Flight Search Results</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Flight Number</th>
                    <th>Departure</th>
                    <th>Arrival</th>
                    <th>Departure Date</th>
                    <th>Departure Time</th>
                    <th>Price</th>
                    <th>Available Seats</th>
                    <th>Reserve</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flight in Model.Flights)
                {
                    <tr>
                        <td>@flight.FlightId</td>
                        <td>@Model.Airports[@flight.DepartureCity]</td>
                        <td>@Model.Airports[@flight.ArrivalCity]</td>
                        <td>@flight.DepartureDate.ToString("dd-MM-yyyy")</td>
                        <td>@flight.DepartureDate.TimeOfDay</td>
                        <td>@flight.Price.ToString("C")</td>
                        <td>@flight.AvailableSeats</td>
                        <td>
                            <a asp-action="Reserve" asp-route-flightId="@flight.FlightId" class="btn btn-primary">Reserve</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
}
else
{
    <p>No flights found. Please search for available flights.</p>
}

