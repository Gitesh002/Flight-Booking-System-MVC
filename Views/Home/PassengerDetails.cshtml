@model ReserveFlightViewModel

<h2 class="text-center mb-4">Enter Passenger Details</h2>

<form asp-action="ConfirmReservation" method="post">
    <!-- Hidden Inputs -->
    <input type="hidden" name="FlightId" value="@Model.FlightId" />
    <input type="hidden" name="NumberOfSeats" value="@Model.NumberOfSeats" />
    <input type="hidden" name="DepartureCity" value="@Model.DepartureCity" />
    <input type="hidden" name="PricePerSeat" value="@Model.PricePerSeat" />

    @for (int i = 0; i < Model.NumberOfSeats; i++)
    {
            <h5>Passenger @(i + 1)</h5>
            <div class="blur-black-background" style="margin-bottom:20px">            
                <div class="row">
                    <!-- First Name -->
                    <div class="col-md-6">
                        <div class="form-group">
                        <label><h6>First Name :</h6></label>
                            <input type="text" name="Passengers[@i].FirstName" class="form-control" required />
                        </div>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6">
                        <div class="form-group">
                        <label><h6>Last Name :</h6></label>
                            <input type="text" name="Passengers[@i].LastName" class="form-control" required />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Gender -->
                    <div class="col-md-6">
                        <div class="form-group">
                        <label><h6>Gender</h6></label>
                            <select name="Passengers[@i].Gender" class="form-control" required>
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>

                    <!-- Age -->
                    <div class="col-md-6">
                        <div class="form-group">
                        <label><h6>Age</h6></label>
                            <input type="number" name="Passengers[@i].Age" class="form-control" required min="0" />
                        </div>
                    </div>
                </div>
            </div>
    }

    <!-- Submit Button -->
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg">Confirm Reservation</button>
    </div>
</form>
