@{
    int flightId = ViewBag.Flight.FlightId;
    string departureCity = ViewBag.Flight.DepartureCity;
    string arrivalCity = ViewBag.Flight.ArrivalCity;
    int availableSeats = ViewBag.Flight.AvailableSeats;
    DateTime date = ViewBag.Flight.DepartureDate;
}

<h2>Reserve Flight</h2>
<div class="transparent-light-background">
    <form asp-action="Reserve" method="post">
        <div class="form-group" style="margin-bottom:10px">
            <label><b>Flight Number:</b> @flightId</label>
        </div>
        <div class="form-group" style="margin-bottom:10px">
            <label><b>Departure:</b> @departureCity</label>
        </div>
        <div class="form-group" style="margin-bottom:10px">
            <label><b>Arrival:</b> @arrivalCity</label>
        </div>
        <div class="form-group" style="margin-bottom:10px">
            <label><b>Date Time:</b> @date.ToString("dd-MM-yyyy HH:mm")</label>
        </div>
        <div class="form-group" style="margin-bottom:10px">
            <label><b>Available Seats:</b> @availableSeats</label>
        </div>
        <div class="form-group" style="margin-bottom:10px">
            <label><b>Number of Seats</b></label>
            <input type="number" name="numberOfSeats" class="form-control" required min="1" max="@availableSeats" />
            <span class="text-danger"></span>
        </div>
        <input type="hidden" name="flightId" value="@flightId" />
        <button type="submit" class="btn btn-primary">Proceed to Passenger Details</button>
    </form>
</div>
