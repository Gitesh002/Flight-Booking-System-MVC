@model IEnumerable<fbs.Models.Airport>

<div class="blur-black-background">
    <h5 style="text-align:center">Search Flights</h5>
    <div class="d-flex justify-content-center align-items-center">
        <form asp-action="SearchResults" method="post" style="width: 100%;">
            <div class="row">
                <!-- Trip Type -->
                <div class="col-md-12">
                    <div class="form-group">
                        <h5>Trip Type</h5>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="tripType" id="oneWay" value="OneWay" checked onchange="toggleReturnDate(false)">
                            <label class="form-check-label" for="oneWay">One Way</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="tripType" id="roundTrip" value="RoundTrip" onchange="toggleReturnDate(true)">
                            <label class="form-check-label" for="roundTrip">Round Trip</label>
                        </div>
                    </div>
                </div>

                <!-- From field -->
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="fromDropdown"><h5>From</h5></label>
                        <select id="fromDropdown" name="from" class="form-control" required>
                            <option value="">Select Departure</option>
                            @foreach (var airport in Model)
                            {
                                <option value="@airport.IATA_code">@airport.city_name (@airport.IATA_code)</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- To field -->
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="toDropdown"><h5>To</h5></label>
                        <select id="toDropdown" name="to" class="form-control" required>
                            <option value="">Select Destination</option>
                            @foreach (var airport in Model)
                            {
                                <option value="@airport.IATA_code">@airport.city_name (@airport.IATA_code)</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Departure Date field -->
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="dateField"><h5>Date</h5></label>
                        <input type="date" name="departureDate" id="dateField" class="form-control" required min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <!-- Return Date field (Initially hidden) -->
                <div class="col-md-3" id="returnDateField" style="display: none;">
                    <div class="form-group">
                        <label for="returnDate"><h5>Return Date</h5></label>
                        <input type="date" name="returnDate" id="returnDate" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">Search</button>
            </div>
        </form>
    </div>
</div>

<script>
    function toggleReturnDate(isRoundTrip) {
        document.getElementById('returnDateField').style.display = isRoundTrip ? 'block' : 'none';
    }
</script>