@{
    int flightId = ViewBag.Flight.FlightId;
    string departureCity = ViewBag.Flight.DepartureCity;
    string arrivalCity = ViewBag.Flight.ArrivalCity;
    DateTime date = ViewBag.Flight.DepartureDate;
    float TotalCost = ViewBag.ticket.TotalCost;
    int revId = ViewBag.ticket.ReservationId;
    List<Passenger> Passengers = ViewBag.ticket.Passengers;
    int seatcount = ViewBag.ticket.NumberOfSeats;
}

<h2 class="text-center mb-4">Flight Details</h2>

<div class="transparent-light-background p-4 rounded shadow" style="max-width: 800px; margin: 0 auto;">
    <!-- Flight Details -->
    <h4>Flight Information</h4>
    <form asp-action="PaymentForm" method="post">
    <div class="blur-black-background" style="margin-bottom:10px">
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Flight Number:</strong> @flightId
        </div>
        <div class="col-md-6">
            <strong>Departure:</strong> @departureCity
        </div>
        <div class="col-md-6">
            <strong>Arrival:</strong> @arrivalCity
        </div>
        <div class="col-md-6">
            <strong>Date:</strong> @date.ToString("dd-MM-yyyy")
        </div>
        <div class="col-md-6">
            <strong>Time:</strong> @date.ToString("hh:mm tt")
        </div>
        <div class="col-md-6">
            <strong>Total Amount:</strong> @TotalCost.ToString("C")
        </div>
    </div>
    </div>

    <!-- Passenger Details -->
    <h4>Passenger Information</h4>
    <div class="blur-black-background" style="margin-bottom:10px">
    <table class="table ">
        <thead>
            <tr>
                <th>Passenger No.</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < seatcount; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Passengers[i].FirstName</td>
                    <td>@Passengers[i].LastName</td>
                    <td>@Passengers[i].Gender</td>
                    <td>@Passengers[i].Age</td>
                </tr>
            }
        </tbody>
    </table>
    </div>

    <!-- Payment Method -->
    <h4>Payment Method</h4>
    <div class="blur-black-background" style="margin-bottom:10px">
    <div class="form-group">
        <label for="PaymentMethod" class="control-label">Select Payment Method</label>
        <select name="PaymentMethod" class="form-control">
            <option value="CreditCard">Credit Card</option>
            <option value="PayPal">PayPal</option>
            <option value="DebitCard">Debit Card</option>
        </select>
    </div>
    </div>
    <input type="hidden" name="revId" value="@revId" />
    @for (int i = 0; i < seatcount; i++)
    {
        <input type="hidden" name="Passengers[@i].FirstName" value="@Passengers[i].FirstName" />
        <input type="hidden" name="Passengers[@i].LastName" value="@Passengers[i].LastName" />
        <input type="hidden" name="Passengers[@i].Gender" value="@Passengers[i].Gender" />
        <input type="hidden" name="Passengers[@i].Age" value="@Passengers[i].Age" />
    }
    <button type="submit" class="btn btn-primary" style="margin-top:10px">Pay</button>
    </form>
</div>
