@{
    // Payment Details
    int paymentId = ViewBag.payment.PaymentId;
    string paymentMethod = ViewBag.payment.PaymentMethod;
    float amount = ViewBag.payment.Amount;
    DateTime paymentDate = ViewBag.payment.PaymentDate;

    // Flight Details
    int flightId = ViewBag.flight.FlightId;
    string departureCity = ViewBag.flight.DepartureCity;
    string arrivalCity = ViewBag.flight.ArrivalCity;
    DateTime departureDate = ViewBag.flight.DepartureDate;
    int numberOfSeats = ViewBag.ticket.NumberOfSeats;

    // Passenger Details
    List<Passenger> Passengers = ViewBag.ticket.Passengers;
}

<h2 class="text-center mb-4"><b>Payment Successful</b></h2>

<div class="transparent-light-background p-4 rounded shadow" style="max-width: 800px; margin: 0 auto;">
    <!-- Payment Information -->

    <h5>Payment Information</h5>
    <div class="blur-black-background" style="margin-bottom:10px">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Payment ID:</strong> @paymentId</p>
            </div>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Payment Method:</strong> @paymentMethod</p>
            </div>
            <div class="col-md-6">
                <p><strong>Payment Amount:</strong> @amount.ToString("C")</p>
            </div>
         </div>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Payment Date:</strong> @paymentDate.ToString("dd-MM-yyyy")</p>
            </div>
            <div class="col-md-6">
                <p><strong>Payment Time:</strong> @paymentDate.ToString("hh:mm tt")</p>
            </div>
        </div>
        </div>
    </div>

    <!-- Flight Information -->
    <h5>Flight Information</h5>
    <div class="blur-black-background" style="margin-bottom:10px">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Flight Number:</strong> @flightId</p>
            </div>
            <div class="col-md-6">
                <p><strong>Number of Seats:</strong> @numberOfSeats</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <p><strong>From:</strong> @departureCity</p>
            </div>
            <div class="col-md-6">
                <p><strong>To:</strong> @arrivalCity</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Departure Date:</strong> @departureDate.ToString("dd-MM-yyyy")</p>
            </div>
            <div class="col-md-6">
                <p><strong>Departure Time:</strong> @departureDate.ToString("hh:mm tt")</p>
            </div>
        </div>
    </div>

    <!-- Passenger Information -->
            <h5>Passenger Information</h5>
    <div class="blur-black-background" style="margin-bottom:10px">
            <table class="table">
                <thead>
                    <tr>
                        <th>Serial No.</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Age</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < numberOfSeats; i++)
                    {
                        <tr>
                            <td>@(i + 1).</td>
                            <td>@Passengers[i].FirstName</td>
                            <td>@Passengers[i].LastName</td>
                            <td>@Passengers[i].Gender</td>
                            <td>@Passengers[i].Age</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    <!-- Call to Action -->
    <div class="text-center">
        <a asp-action="Search" asp-controller="Home" class="btn btn-primary">Search for More Flights</a>
    </div>
</div>

